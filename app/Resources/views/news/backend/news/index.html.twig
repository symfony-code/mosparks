{% extends 'base.html.twig' %}

{% block breadcrumbs %}
    {% set breadcrumbs = {'breadcrumbs' : [{'label': 'Новости'}]} %}
    {% include 'parts/breadcrumbs.html.twig' with breadcrumbs %}
{% endblock %}

{% block body %}
    <h1></h1>
    <p>
        <a href="{{ path('newsCreate') }}" class="btn btn-primary">Создать</a>
    </p>
    <table class="table">
        <tr>
            <td>ID</td>
            <td>Заголовок</td>
            <td></td>
        </tr>
        {% for model in models %}
            <tr>
                <td>{{ model.id }}</td>
                <td>{{ model.title }}</td>
                <td>
                    <a href="{{ path('newsView', {"id": model.id}) }}"><span
                                class="glyphicon glyphicon-eye-open"></span></a>
                    <a href="{{ path('newsUpdate', {"id": model.id}) }}"><span
                                class="glyphicon glyphicon-pencil"></span></a>
                    <a href="{{ path('newsDelete', {"id": model.id}) }}"><span
                                class="glyphicon glyphicon-remove"></span></a>
                </td>
            </tr>
        {% endfor %}
    </table>

{% endblock %}